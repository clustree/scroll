{
  "name": "@clustree/scroll",
  "version": "1.0.1",
  "description": "A React custom scroll component",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "repository": "git@github.com:clustree/scroll.git",
  "author": "Clustree",
  "license": "MIT",
  "source": "src/index.js",
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "lint-staged": {
    "src/**": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "yarn run build",
    "pre-build": "rimraf lib",
    "build": "microbundle --css-modules false --jsx React.createElement",
    "dev": "microbundle watch --css-modules false --jsx React.createElement",
    "website:build": "cd website && PUBLIC_URL='//clustree.github.io/scroll' yarn build",
    "website:deploy": "gh-pages -d website/build"
  },
  "devDependencies": {
    "gh-pages": "^2.1.1",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "microbundle": "^0.12.0",
    "prettier": "^1.18.1",
    "rimraf": "^3.0.2",
    "sass": "^1.26.5"
  }
}
